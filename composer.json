{
    "name": "edwrodrig/static_generator",
    "description": "Library to generate static sites",
    "authors": [
        {
            "name": "Edwin Rodríguez León",
            "email": "edwrodrig@gmail.com",
            "homepage": "http://www.edwin.cl",
            "role": "Developer"
        }
    ],
    "keywords" : [
        "static-site-generator"
    ],
    "license" : "MIT",
    "minimum-stability" : "stable",
    "suggest": {
        "edwrodrig/image": "To work with images",
        "edwrodrig/contento" : "To manage types and collections",
        "edwrodrig/google_utils" : "To interact with Google Drive data",
        "edwrodrig/js": "To add some common javascript utils"
    },
    "require": {
        "php" : "^7.4",
        "matthiasmullie/minify" : "^1.3",
        "leafo/scssphp": "^0.7.5",
        "phpdocumentor/reflection-docblock": "^4.3.0",
        "edwrodrig/file_cache" : "^0.1",
        "ext-fileinfo": "*"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^8.5",
        "edwrodrig/image" : "^2.0",
        "mikey179/vfsStream": "^1.6",
        "edwrodrig/contento" : "dev-master",
        "edwrodrig/js" : "^3.0"
    },
    "autoload" : {
        "psr-4" : {
            "edwrodrig\\static_generator\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "test\\edwrodrig\\static_generator\\" : "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            ".git",
            ".gitignore",
            "/.travis.yml",
            "/phpunit.xml.dist",
            "/examples",
            "/.idea",
            "README.md"
        ]
    }
}
